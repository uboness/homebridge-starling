{
  "name": "@uboness/__packageName__",
  "version": "0.0.1",
  "author": "uboness",
  "publishConfig": {
    "@uboness:registry": "https://registry.npmjs.org "
  },
  "displayName": "Homebridge __Name__",
  "description": "__short_description__",
  "license": "Apache-2.0",
  "keywords": [
    "homebridge-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uboness/{{name}}"
  },
  "bugs": {
    "url": "https://github.com/uboness/{{name}}/issues"
  },
  "engines": {
    "node": "^18.17.0 || ^20.9.0",
    "homebridge": "^1.6.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "files": [
    "tsconfig.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "dist",
    "config.schema.json"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "pnpm run clean && tsc",
    "watch": "pnpm run clean && tsc -w",
    "prepublishOnly": "pnpm run build",
    "release:bump": "commit-and-tag-version",
    "release:postbump": "pnpm run release:push && pnpm run release:publish",
    "release:push": "git push --follow-tags",
    "release:publish": "npm publish --access public",
    "release": "pnpm run release:bump && pnpm run release:push && pnpm run release:publish"
  },
  "devDependencies": {
    "@inquirer/prompts": "^3.3.0",
    "@types/node": "^18.16.20",
    "homebridge": "^1.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.5"
  }
}
